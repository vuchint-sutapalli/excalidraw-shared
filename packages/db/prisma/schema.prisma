generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//Create User ,Room and Chat models
model User {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  password String
  photo    String?
  rooms    Room[]  @relation("AdminOfRooms")
  memberOf Room[]  @relation("MemberOfRooms")
  chats    Chat[]
}

model Room {
  id          Int      @id @default(autoincrement())
  slug        String   @unique
  createdAt   DateTime @default(now())
  adminId     String
  isStarred   Boolean  @default(false)
  description String?  @default("")
  tags        String[] @default([])

  admin    User      @relation("AdminOfRooms", fields: [adminId], references: [id])
  members  User[]    @relation("MemberOfRooms")
  chats    Chat[]
  shapes   Shape[]
  elements Element[]
}

model Chat {
  id      Int    @id @default(autoincrement())
  message String
  userId  String
  roomId  Int

  user User @relation(fields: [userId], references: [id])
  room Room @relation(fields: [roomId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([roomId])
  @@index([userId])
}

model Shape {
  id   String @id @default(uuid())
  type String // "rectangle", "circle"
  x    Float
  y    Float

  // Rectangle properties
  width  Float?
  height Float?

  // Circle properties
  radius Float?

  // Each shape belongs to a room
  roomId Int
  room   Room @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@index([roomId])
}

model Element {
  id     String @id
  roomId Int
  room   Room   @relation(fields: [roomId], references: [id], onDelete: Cascade)
  data   Json

  @@index([roomId])
}
